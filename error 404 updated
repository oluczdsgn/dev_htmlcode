<body>
    <div class="container">
        <div class="loader"></div>
        <div class="code-wrapper">
            <pre id="code-display" class="code-box"></pre>
            <button id="copy-button" title="copiar codigo">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                    <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                    <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zM8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                </svg>
            </button>
        </div>
    </div>

    <script>
        const codeToCopy = `
<style>
    .loader {
        position: relative;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: conic-gradient(from 0deg, #ff0000, #ffff00, #00ff00, #00ffff, #0000ff, #ff00ff, #ff0000);
        animation: spin 2s linear infinite;
    }
    .loader::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: conic-gradient(from 0deg, #ff0000, #ffff00, #00ff00, #00ffff, #0000ff, #ff00ff, #ff0000);
        filter: blur(15px) brightness(1.2);
        transform: scale(1.05);
    }
    .loader::after {
        content: '';
        position: absolute;
        top: 8px;
        left: 8px;
        right: 8px;
        bottom: 8px;
        background: #1e1e1e; /* Ajuste para o fundo do seu site */
        border-radius: 50%;
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<div class="loader"></div>
        `.trim();

        const codeDisplay = document.getElementById('code-display');
        const copyButton = document.getElementById('copy-button');

        // Exibe o código na caixa de texto, escapando caracteres especiais
        codeDisplay.textContent = codeToCopy;

        copyButton.addEventListener('click', () => {
            const textArea = document.createElement('textarea');
            textArea.value = codeToCopy;
            document.body.appendChild(textArea);
            textArea.select();
            try {
                document.execCommand('copy');
                copyButton.title = "Copiado!";
                setTimeout(() => {
                    copyButton.title = "copiar codigo";
                }, 2000);
            } catch (err) {
                console.error('Falha ao copiar o código: ', err);
                copyButton.title = "Falha ao copiar";
            }
            document.body.removeChild(textArea);
        });
    </script>
</body>
