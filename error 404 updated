            border-radius: 20px;
            border: 1px solid #333;
        }

        .loader {
            position: relative;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: conic-gradient(from 0deg, #ff0000, #ffff00, #00ff00, #00ffff, #0000ff, #ff00ff, #ff0000);
            animation: spin 2s linear infinite;
            flex-shrink: 0;
        }

        .loader::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 50%;
            background: conic-gradient(from 0deg, #ff0000, #ffff00, #00ff00, #00ffff, #0000ff, #ff00ff, #ff0000);
            filter: blur(15px) brightness(1.2);
            transform: scale(1.05);
        }
        
        .loader::after {
            content: '';
            position: absolute;
            top: 8px;
            left: 8px;
            right: 8px;
            bottom: 8px;
            background: #1e1e1e;
            border-radius: 50%;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .code-wrapper {
            position: relative;
        }

        .code-box {
            background-color: #2d2d2d;
